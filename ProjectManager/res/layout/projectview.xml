<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/projectViewLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/slidelayout_proj"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/BtnSlide_proj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fb" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="25dp" >

            <TextView
                android:id="@+id/projDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Hello world. I am the first project in this awesome app!"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <ListView
                android:id="@+id/memberProgressList"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#d1d1d1"
                android:dividerHeight="1dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingTop="15dp" >

            <Button
                android:id="@+id/createNewTaskButton"
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:background="@drawable/scribble1"
                android:text="Create Task"
                android:textColor="#05261f"
                android:textSize="22sp" />

            <Button
                android:id="@+id/taskListButton"
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:background="@drawable/scribble1"
                android:text="Task List"
                android:textColor="#05261f"
                android:textSize="23sp" />

            <Button
                android:id="@+id/editProjectButton"
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:background="@drawable/scribble1"
                android:text="Edit Project"
                android:textColor="#05261f"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>