<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/projectViewLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgrounddown"
    android:orientation="vertical"
    android:paddingTop="5dp">	       	    
	<LinearLayout 
	    android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="vertical"
	   	android:paddingLeft="25dp"
	   	android:paddingRight="25dp"
	   	android:paddingTop="15dp"
	   	android:gravity="center_vertical" >
	    
        <TextView
            android:id="@+id/projDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Hello world. I am the first project in this awesome app!"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />    
    </LinearLayout>
    <LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
	 	android:layout_height="wrap_content"
	 	android:paddingTop="20dp" >
		<ListView
		     android:id="@+id/memberProgressList"
		     android:layout_width="fill_parent"
		     android:layout_height="210dp"
		     android:layout_marginBottom="10dp"
		     android:layout_marginLeft="30dp"
		     android:layout_marginRight="30dp"
		     android:background="@drawable/rounded"
		     android:padding="10dp"
		     android:divider="#d1d1d1"
    		 android:dividerHeight="1dp"
		     android:cacheColorHint="@android:color/transparent" />
	</LinearLayout>
		
	<LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:orientation="horizontal" >
		
        <Button
            android:id="@+id/createNewTaskButton"
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:background="@drawable/scribble1"
            android:text="Create Task"
            android:textColor="#05261f"
            android:textSize="22sp" />
        <Button
            android:id="@+id/taskListButton"
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:background="@drawable/scribble1"
            android:text="Task List"
            android:textColor="#05261f"
            android:textSize="23sp" />
        <Button
            android:id="@+id/editProjectButton"
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:background="@drawable/scribble1"
            android:text="Edit Project"
            android:textColor="#05261f"
            android:textSize="23sp" />
   	</LinearLayout>
	
	
